{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ES2022",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "rootDir": "src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true
    },
    "include": ["src/**/*.ts"]
  }  